<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireBaseExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00EE8F</item>
        <item name="colorPrimaryVariant">#00EE8F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FD78A7</item>
        <item name="colorSecondaryVariant">#FF4C9A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeFirebaseAuth" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="AlertDialogFont" parent="AlertDialog.AppCompat.Light">
        <item name="fontFamily">monospace</item>
    </style>

    <style name="Theme.FireBaseExample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FireBaseExample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>